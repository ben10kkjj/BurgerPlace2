@model BurgerPlace2.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-danger">Editar</h1>

<h4 class="text-danger">Categoria</h4>
<hr />
<div class="row" style="min-height: 60vh;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-danger mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="bg-danger btn border-danger text-white mt-3"asp-action=Index>De volta รก lista</a>
</div>

